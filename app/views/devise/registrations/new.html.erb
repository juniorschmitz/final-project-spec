<h2>Registro de novo usuário</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => { :class => 'form-signin' }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email, class: 'sr-only' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: 'Endereço de e-mail' %>
  </div>

  <div class="field">
    <%= f.label :password, class: 'sr-only' %>
    <% if @minimum_password_length %>
<!--    <em>(<%= @minimum_password_length %> Caracteres no mínimo)</em> -->
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: 'form-control', placeholder: "Senha (#{@minimum_password_length} Caracteres no mínimo)" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, class: 'sr-only' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', placeholder: 'Confirmação de senha' %>
  </div>

  <div class="actions">
    <%= f.submit "Registrar", class: 'btn btn-lg btn-primary btn-block' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
