<h2 style="text-align:center;">Login</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { method: :post, :class => 'form-signin' }) do |f| %>
  <div class="field">
    <%= f.label :email, class: 'sr-only' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: 'EndereÃ§o de e-mail' %>
  </div>

  <div class="field">
    <%= f.label :password, class: 'sr-only' %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: 'form-control', placeholder: 'Senha' %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field checkbox mb-3">
      <label>
        <%= f.check_box :remember_me %> Lembrar de mim
        <!-- <%= f.label :remember_me %> -->
      </label>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Logar", class: 'btn btn-lg btn-primary btn-block' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
